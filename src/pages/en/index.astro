---
import LandingPageLayout from '~/layouts/LandingPageLayout.astro';
import HeroSection from '~/components/landing/HeroSection.astro';
import HowItWorks from '~/components/landing/HowItWorks.astro';
import LaunchSites from '~/components/landing/LaunchSites.astro';
import RegionModules from '~/components/landing/RegionModules.astro';
import SafetySection from '~/components/landing/SafetySection.astro';
import FAQSection from '~/components/landing/FAQSection.astro';
import ContactCTA from '~/components/landing/ContactCTA.astro';
import PricingSection from '~/components/landing/PricingSection.astro';
import SocialProofSection from '~/components/landing/SocialProofSection.astro';
import PilotSection from '~/components/landing/PilotSection.astro';

import { t } from '~/i18n/utils';
import { buildMainSiteUrl, siteConfig } from '~/config/site';
import { loadSectionImages } from '~/config/section-images';

const locale = 'en';
const dict = t(locale);
const ctaUrl = buildMainSiteUrl('cta-primary', locale);
const whatsappNumber = siteConfig.contact.whatsapp.replace(/[^0-9]/g, '');
const whatsappUrl = `https://wa.me/${whatsappNumber}`;
const sectionImages = await loadSectionImages();
---

<LandingPageLayout locale={locale} currentPath="/en/" dict={dict} ctaUrl={ctaUrl} whatsappUrl={whatsappUrl} faqItems={dict.faq.items}>
  <HeroSection
    backgroundImage={sectionImages.hero}
    backgroundImageMobile={sectionImages.heroMobile}
    title={dict.hero.title}
    tagline={dict.hero.tagline}
    subtitle={dict.hero.subtitle}
    definition={dict.hero.definition}
    ctaPrimary={dict.hero.ctaPrimary}
    ctaPrimaryNote={dict.hero.ctaPrimaryNote}
    ctaPrimaryUrl={ctaUrl}
    ctaWhatsapp={dict.hero.ctaWhatsapp}
    whatsappUrl={whatsappUrl}
    trustLine={dict.hero.trustLine}
  />

  <SocialProofSection backgroundImage={sectionImages.socialProof} platforms={dict.socialProof.platforms} reviews={dict.socialProof.reviews} />

  <HowItWorks
    backgroundImage={sectionImages.howItWorks}
    sectionTitle={dict.howItWorks.sectionTitle}
    steps={dict.howItWorks.steps}
  />

  <LaunchSites
    backgroundImage={sectionImages.launchSites}
    sectionTitle={dict.launchSites.sectionTitle}
    intro={dict.launchSites.intro}
    sites={dict.launchSites.sites}
    weatherNote={dict.launchSites.weatherNote}
  />

  <PricingSection
    backgroundImage={sectionImages.pricing}
    sectionTitle={dict.pricing.sectionTitle}
    sectionSubtitle={dict.pricing.sectionSubtitle}
    packages={dict.pricing.packages}
    ctaLabel={dict.pricing.ctaLabel}
    ctaUrl={ctaUrl}
    whatsappLabel={dict.pricing.whatsappLabel}
    voucherNote={dict.pricing.voucherNote}
  />

  <RegionModules
    backgroundImage={sectionImages.regions}
    sectionTitle={dict.regions.sectionTitle}
    sectionSubtitle={dict.regions.sectionSubtitle}
    regions={dict.regions.items}
    ctaLabel={dict.regions.routeLabel}
    ctaUrl={siteConfig.mapsUrl}
  />

  <PilotSection
    sectionTitle={dict.pilot.sectionTitle}
    name={dict.pilot.name}
    credentials={dict.pilot.credentials}
    bio={dict.pilot.bio}
    experience={dict.pilot.experience}
    flights={dict.pilot.flights}
    rating={dict.pilot.rating}
  />

  <SafetySection
    backgroundImage={sectionImages.safety}
    sectionTitle={dict.safety.sectionTitle}
    weather={dict.safety.weather}
    planning={dict.safety.planning}
    packingList={dict.safety.packingList}
    suitability={dict.safety.suitability}
  />

  <FAQSection
    backgroundImage={sectionImages.faq}
    sectionTitle={dict.faq.sectionTitle}
    items={dict.faq.items}
  />

  <ContactCTA
    backgroundImage={sectionImages.contact}
    sectionTitle={dict.contactCta.sectionTitle}
    phoneLabel={dict.contactCta.phoneLabel}
    emailLabel={dict.contactCta.emailLabel}
    whatsappLabel={dict.contactCta.whatsappLabel}
    callLabel={dict.contactCta.callLabel}
  />
</LandingPageLayout>
