---
import '@fontsource-variable/inter';
import '@fontsource-variable/outfit';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Outfit Variable';

    --aw-color-primary: rgb(249 115 22);
    --aw-color-secondary: rgb(234 88 12);
    --aw-color-accent: rgb(251 146 60);

    --aw-color-text-heading: rgb(30 41 59);
    --aw-color-text-default: rgb(71 85 105);
    --aw-color-text-muted: rgb(148 163 184);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(250 250 249);

    ::selection {
      background-color: rgba(249, 115, 22, 0.3);
      color: white;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Outfit Variable';

    --aw-color-primary: rgb(56 189 248);
    --aw-color-secondary: rgb(14 165 233);
    --aw-color-accent: rgb(125 211 252);

    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(203 213 225);
    --aw-color-text-muted: rgb(148 163 184);
    --aw-color-bg-page: rgb(10 15 26);

    ::selection {
      background-color: rgba(56, 189, 248, 0.3);
      color: white;
    }
  }
</style>
