---
import { siteConfig } from '~/config/site';

export interface Props {
  sectionTitle: string;
  phoneLabel: string;
  emailLabel: string;
  whatsappLabel: string;
  callLabel: string;
}

const { sectionTitle, phoneLabel, emailLabel, whatsappLabel, callLabel } = Astro.props;

const phone = siteConfig.contact.phone;
const email = siteConfig.contact.email;
const whatsappNumber = siteConfig.contact.whatsapp.replace(/[^0-9]/g, '');
---

<section id="kontakt" class="py-16 sm:py-20 bg-gradient-to-b from-stone-50 to-white dark:from-alpine-700 dark:to-alpine-800 relative overflow-hidden">
  <div class="max-w-4xl mx-auto px-4 sm:px-6">
    <div class="glow-orb glow-orb-sky w-72 h-72 top-0 left-1/2 -translate-x-1/2 opacity-25"></div>

    <div class="glass-card p-8 sm:p-10 intersect:animate-fade intersect-once">
      <h2 class="text-xs font-semibold text-orange-500 dark:text-sky-400 uppercase tracking-[0.2em] mb-8">
        {sectionTitle}
      </h2>

      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-8">
        {/* Contact info */}
        <div class="flex flex-col sm:flex-row gap-6 sm:gap-10">
          {/* Phone */}
          <div class="flex items-center gap-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gray-100 dark:bg-white/[0.06] border border-gray-200 dark:border-white/[0.1] flex items-center justify-center">
              <svg class="w-5 h-5 text-orange-500 dark:text-sky-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <p class="text-xs font-semibold text-slate-400 dark:text-slate-500 uppercase tracking-wider">{phoneLabel}</p>
              <a href={`tel:${phone}`} class="text-lg font-semibold text-slate-800 dark:text-white hover:text-orange-500 dark:hover:text-sky-400 transition-colors">
                {phone}
              </a>
            </div>
          </div>

          {/* Email */}
          <div class="flex items-center gap-3">
            <div class="flex-shrink-0 w-10 h-10 rounded-full bg-gray-100 dark:bg-white/[0.06] border border-gray-200 dark:border-white/[0.1] flex items-center justify-center">
              <svg class="w-5 h-5 text-orange-500 dark:text-sky-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <p class="text-xs font-semibold text-slate-400 dark:text-slate-500 uppercase tracking-wider">{emailLabel}</p>
              <a href={`mailto:${email}`} class="text-lg font-semibold text-slate-800 dark:text-white hover:text-orange-500 dark:hover:text-sky-400 transition-colors">
                {email}
              </a>
            </div>
          </div>
        </div>

        {/* CTA buttons */}
        <div class="flex flex-col sm:flex-row gap-3">
          {/* WhatsApp */}
          <a
            href={`https://wa.me/${whatsappNumber}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-green-500 hover:bg-green-600 rounded-lg shadow-md shadow-green-500/20 transition-all duration-200 btn-whimsy"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            {whatsappLabel}
          </a>

          {/* Call */}
          <a
            href={`tel:${phone}`}
            class="inline-flex items-center justify-center gap-2 px-6 py-3 text-sm font-semibold text-slate-600 dark:text-slate-300 border border-gray-200 dark:border-white/[0.12] hover:border-orange-300 dark:hover:border-sky-400/30 hover:text-orange-500 dark:hover:text-sky-400 hover:bg-orange-50 dark:hover:bg-white/[0.05] rounded-lg transition-all duration-200 btn-whimsy"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {callLabel}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
