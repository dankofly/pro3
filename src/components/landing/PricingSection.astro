---
import { siteConfig } from '~/config/site';
import SectionBackground from '~/components/common/SectionBackground.astro';
import type { ImageMetadata } from 'astro';

export interface PricingPackage {
  category: string;
  name: string;
  price: string;
  pricePrefix?: string;
  features: string[];
  highlighted?: boolean;
}

export interface Props {
  sectionTitle: string;
  sectionSubtitle: string;
  packages: PricingPackage[];
  ctaLabel: string;
  ctaUrl: string;
  whatsappLabel: string;
  voucherNote: string;
  backgroundImage?: ImageMetadata;
}

const {
  sectionTitle,
  sectionSubtitle,
  packages,
  ctaLabel,
  ctaUrl,
  whatsappLabel,
  voucherNote,
  backgroundImage,
} = Astro.props;

const whatsappNumber = siteConfig.contact.whatsapp.replace(/[^0-9]/g, '');
---

<section id="pakete" class:list={["py-16 sm:py-20 relative overflow-hidden", backgroundImage ? "" : "bg-white dark:bg-alpine-800"]}>
  {backgroundImage && (
    <SectionBackground src={backgroundImage} alt="Section background" />
  )}
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="glow-orb glow-orb-sky w-80 h-80 -top-10 left-1/2 -translate-x-1/2 opacity-20"></div>
    <p class="text-sm font-semibold text-orange-500 dark:text-sky-400 uppercase tracking-[0.2em] text-center mb-2">
      {sectionSubtitle}
    </p>
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-slate-800 dark:text-white font-heading text-center mb-12">
      {sectionTitle}
    </h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-5">
      {packages.map((pkg) => (
        <div class:list={[
          'relative p-6 flex flex-col intersect:animate-fade intersect-once',
          pkg.highlighted
            ? 'glass-card-highlight'
            : 'glass-card-hover',
        ]}>
          {pkg.highlighted && (
            <span class="popular-badge px-3 py-1 text-xs font-bold uppercase tracking-wider bg-orange-500 dark:bg-sky-500 text-white rounded-full shadow-lg">
              Popular
            </span>
          )}

          {/* Category label */}
          <p class:list={[
            'text-xs font-semibold uppercase tracking-wider mb-1',
            pkg.highlighted ? 'text-orange-500 dark:text-sky-400' : 'text-slate-400 dark:text-slate-500',
          ]}>
            {pkg.category}
          </p>

          {/* Package name */}
          <h3 class="text-lg font-bold text-slate-800 dark:text-white mb-4">
            {pkg.name}
          </h3>

          {/* Price */}
          <div class="mb-5">
            {pkg.pricePrefix && (
              <span class="text-sm text-slate-400 dark:text-slate-500">{pkg.pricePrefix} </span>
            )}
            <span class="text-4xl font-bold text-slate-800 dark:text-white">{pkg.price}</span>
          </div>

          {/* Features */}
          <ul class="space-y-2.5 mb-6 flex-grow">
            {pkg.features.map((feature) => (
              <li class="flex items-start gap-2 text-sm text-slate-500 dark:text-slate-400">
                <svg class="w-4 h-4 text-orange-400 dark:text-sky-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <circle cx="10" cy="10" r="3" />
                </svg>
                <span set:html={feature} />
              </li>
            ))}
          </ul>

          {/* CTA */}
          <a
            href={ctaUrl}
            target="_blank"
            rel="noopener noreferrer"
            class:list={[
              'btn-whimsy block text-center py-3 px-4 rounded-lg font-semibold text-sm transition-all duration-200 mb-2 cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2',
              pkg.highlighted
                ? 'bg-orange-500 dark:bg-sky-500 text-white hover:bg-orange-600 dark:hover:bg-sky-400 shadow-md shadow-orange-500/20 dark:shadow-sky-500/20 focus:ring-orange-400 dark:focus:ring-sky-400'
                : 'border border-gray-200 dark:border-white/[0.12] text-slate-600 dark:text-slate-300 hover:border-orange-300 dark:hover:border-sky-400/30 hover:text-orange-500 dark:hover:text-sky-400 hover:bg-orange-50 dark:hover:bg-white/[0.05] focus:ring-orange-400 dark:focus:ring-sky-400',
            ]}
          >
            {ctaLabel}
          </a>

          {/* WhatsApp */}
          <a
            href={`https://wa.me/${whatsappNumber}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-1.5 text-sm text-green-600 dark:text-green-400 hover:text-green-500 dark:hover:text-green-300 transition-colors py-1 cursor-pointer"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            {whatsappLabel}
          </a>
        </div>
      ))}
    </div>

    {/* Voucher note */}
    <p class="text-center text-sm text-slate-400 dark:text-slate-500 mt-8">
      <span set:html={voucherNote} />
    </p>
  </div>
</section>
