---
export interface Props {
  title: string;
  tagline?: string;
  subtitle: string;
  ctaPrimary: string;
  ctaSecondary: string;
  ctaSecondaryNote: string;
  ctaSecondaryUrl: string;
  trustLine: string;
}

const {
  title,
  tagline,
  subtitle,
  ctaPrimary,
  ctaSecondary,
  ctaSecondaryNote,
  ctaSecondaryUrl,
  trustLine,
} = Astro.props;
---

<section class="relative min-h-[85vh] flex items-center justify-center bg-gradient-to-b from-white via-stone-50 to-stone-100 dark:from-[#060a18] dark:via-[#0a0f1a] dark:to-[#0f1629] overflow-hidden">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-stone-100 dark:from-[#0a0f1a] to-transparent"></div>
    <div class="glow-orb glow-orb-sky w-96 h-96 -top-20 -right-20 opacity-30"></div>
    <div class="glow-orb glow-orb-indigo w-80 h-80 -bottom-20 -left-20 opacity-20"></div>
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 text-center py-16 sm:py-24">
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-slate-800 dark:text-white font-heading leading-tight mb-4">
      {title}
    </h1>

    {tagline && (
      <p class="text-xl sm:text-2xl font-semibold text-orange-500 dark:text-sky-400 mb-6">
        {tagline}
      </p>
    )}

    <p class="text-lg sm:text-xl text-slate-500 dark:text-slate-400 max-w-2xl mx-auto mb-10 leading-relaxed">
      {subtitle}
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8">
      <a
        href="#anfrage"
        class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-orange-500 dark:bg-sky-500 hover:bg-orange-600 dark:hover:bg-sky-400 rounded-xl shadow-lg shadow-orange-500/25 dark:shadow-sky-500/25 hover:shadow-orange-400/30 dark:hover:shadow-sky-400/30 hover:shadow-xl transition-all duration-200 w-full sm:w-auto"
      >
        {ctaPrimary}
      </a>

      <a
        href={ctaSecondaryUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex flex-col items-center justify-center px-8 py-4 text-lg font-semibold text-orange-600 dark:text-sky-300 bg-orange-50 dark:bg-white/[0.05] border border-orange-200 dark:border-white/[0.12] hover:border-orange-300 dark:hover:border-sky-400/30 rounded-xl backdrop-blur-sm hover:bg-orange-100 dark:hover:bg-white/[0.08] transition-all duration-200 w-full sm:w-auto"
      >
        <span>{ctaSecondary}</span>
        <span class="text-xs font-normal text-slate-400 dark:text-slate-500 mt-0.5">{ctaSecondaryNote}</span>
      </a>
    </div>

    <p class="text-sm text-slate-400 dark:text-slate-500">
      {trustLine}
    </p>
  </div>
</section>
