---
export interface Props {
  sectionTitle: string;
  steps: Array<{ title: string; description: string }>;
}

const { sectionTitle, steps } = Astro.props;
---

<section id="ablauf" class="py-16 sm:py-20 bg-white dark:bg-alpine-800 relative overflow-hidden">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <div class="glow-orb glow-orb-sky w-64 h-64 top-10 right-0 opacity-15"></div>
    <h2 class="text-2xl sm:text-3xl font-bold text-slate-800 dark:text-white font-heading text-center mb-12">
      {sectionTitle}
    </h2>

    <div class="relative">
      {/* Vertical line */}
      <div class="hidden sm:block absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-orange-200 to-orange-400/30 dark:from-sky-500/20 dark:to-sky-400/5"></div>

      <div class="space-y-8 sm:space-y-10">
        {steps.map((step, index) => (
          <div class="flex items-start gap-4 sm:gap-6 intersect:animate-fade intersect-once">
            <div class="step-badge flex-shrink-0 w-12 h-12 sm:w-16 sm:h-16 rounded-full bg-orange-100 dark:bg-sky-500/20 text-orange-500 dark:text-sky-400 border border-orange-200 dark:border-sky-500/30 flex items-center justify-center text-lg sm:text-xl font-bold z-10">
              {index + 1}
            </div>
            <div class="pt-1 sm:pt-3">
              <h3 class="text-lg sm:text-xl font-semibold text-slate-800 dark:text-white mb-1">
                {step.title}
              </h3>
              <p class="text-slate-500 dark:text-slate-400 leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
