---
export interface Props {
  sectionTitle: string;
  steps: Array<{ title: string; description: string }>;
}

const { sectionTitle, steps } = Astro.props;
---

<section id="ablauf" class="py-16 sm:py-20 bg-white">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-12">
      {sectionTitle}
    </h2>

    <div class="relative">
      {/* Vertical line */}
      <div class="hidden sm:block absolute left-8 top-0 bottom-0 w-0.5 bg-sky-200"></div>

      <div class="space-y-8 sm:space-y-10">
        {steps.map((step, index) => (
          <div class="flex items-start gap-4 sm:gap-6">
            <div class="flex-shrink-0 w-12 h-12 sm:w-16 sm:h-16 rounded-full bg-sky-600 text-white flex items-center justify-center text-lg sm:text-xl font-bold z-10">
              {index + 1}
            </div>
            <div class="pt-1 sm:pt-3">
              <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-1">
                {step.title}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
