---
export interface Props {
  sectionTitle: string;
  intro: string;
  sites: Array<{ name: string; description: string }>;
  weatherNote: string;
}

const { sectionTitle, intro, sites, weatherNote } = Astro.props;
---

<section id="startplaetze" class="py-16 sm:py-20 bg-gray-50">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-4">
      {sectionTitle}
    </h2>

    <p class="text-gray-600 text-center max-w-2xl mx-auto mb-12 leading-relaxed">
      {intro}
    </p>

    <div class="grid md:grid-cols-2 gap-6 mb-8">
      {sites.map((site) => (
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
          <div class="flex items-start gap-3 mb-3">
            <svg class="w-6 h-6 text-sky-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <h3 class="text-lg font-semibold text-gray-900">{site.name}</h3>
          </div>
          <p class="text-gray-600 leading-relaxed">{site.description}</p>
        </div>
      ))}
    </div>

    <div class="bg-sky-50 border border-sky-100 rounded-lg p-4 text-center">
      <p class="text-sm text-sky-800">{weatherNote}</p>
    </div>
  </div>
</section>
