---
export interface Props {
  sectionTitle: string;
  name: string;
  credentials: string;
  bio: string;
  experience: string;
  flights: string;
  rating: string;
}

const { sectionTitle, name, credentials, bio, experience, flights, rating } = Astro.props;
---

<section id="pilot" class="py-16 sm:py-20 bg-white dark:bg-alpine-800">
  <div class="max-w-4xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-slate-800 dark:text-white font-heading text-center mb-10">
      {sectionTitle}
    </h2>

    <div class="glass-card-hover p-6 sm:p-8 intersect:animate-fade intersect-once">
      <div class="flex flex-col sm:flex-row gap-6 items-start">
        {/* Pilot icon */}
        <div class="flex-shrink-0 w-16 h-16 rounded-full bg-orange-100 dark:bg-sky-500/10 flex items-center justify-center">
          <svg class="w-8 h-8 text-orange-500 dark:text-sky-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
          </svg>
        </div>

        <div class="flex-1">
          <h3 class="text-xl font-bold text-slate-800 dark:text-white mb-1">{name}</h3>
          <p class="text-sm font-medium text-orange-500 dark:text-sky-400 mb-4">{credentials}</p>
          <p class="text-slate-500 dark:text-slate-400 leading-relaxed mb-5">{bio}</p>

          {/* Stats row */}
          <div class="flex flex-wrap gap-4 sm:gap-6">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-orange-400 dark:text-sky-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-sm font-medium text-slate-600 dark:text-slate-300">{experience}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-orange-400 dark:text-sky-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
              </svg>
              <span class="text-sm font-medium text-slate-600 dark:text-slate-300">{flights}</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <span class="text-sm font-medium text-slate-600 dark:text-slate-300">{rating}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
