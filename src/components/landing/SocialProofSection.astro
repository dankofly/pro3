---
export interface ReviewPlatform {
  platform: 'google' | 'tripadvisor';
  rating: string;
  reviewCount: string;
  label: string;
  url: string;
}

export interface Props {
  platforms: ReviewPlatform[];
}

const { platforms } = Astro.props;
---

<section class="py-6 sm:py-8 bg-[#0f1629]/50 border-b border-white/[0.04]">
  <div class="max-w-4xl mx-auto px-4 sm:px-6">
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-12">
      {platforms.map((p) => (
        <a
          href={p.url}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 group transition-opacity hover:opacity-80"
        >
          {/* Platform icon */}
          {p.platform === 'google' && (
            <div class="w-10 h-10 flex-shrink-0">
              <svg viewBox="0 0 24 24" class="w-10 h-10">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
            </div>
          )}
          {p.platform === 'tripadvisor' && (
            <div class="w-10 h-10 flex-shrink-0">
              <svg viewBox="0 0 24 24" class="w-10 h-10" fill="none">
                <circle cx="12" cy="12" r="12" fill="#34E0A1"/>
                <g transform="translate(3, 5.5) scale(0.75)">
                  <circle cx="6" cy="9" r="2.5" stroke="#000" stroke-width="1.5" fill="none"/>
                  <circle cx="18" cy="9" r="2.5" stroke="#000" stroke-width="1.5" fill="none"/>
                  <path d="M6 5.5C3.5 5.5 2 7 2 9s1.5 3.5 4 3.5 4-1.5 4-3.5-1.5-3.5-4-3.5z" stroke="#000" stroke-width="1" fill="none"/>
                  <path d="M18 5.5c-2.5 0-4 1.5-4 3.5s1.5 3.5 4 3.5 4-1.5 4-3.5-1.5-3.5-4-3.5z" stroke="#000" stroke-width="1" fill="none"/>
                  <path d="M12 4l-3 1.5h6L12 4z" fill="#000"/>
                  <path d="M8 7.5h8" stroke="#000" stroke-width="1"/>
                  <circle cx="12" cy="2" r="1" fill="#E00"/>
                </g>
              </svg>
            </div>
          )}

          {/* Rating info */}
          <div>
            <div class="flex items-center gap-1.5">
              {/* Stars */}
              <div class="flex items-center gap-0.5">
                {[1,2,3,4,5].map(() => (
                  <svg class="w-4 h-4 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>
              <span class="text-lg font-bold text-white">{p.rating}</span>
            </div>
            <p class="text-xs text-slate-500 mt-0.5">{p.label}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
