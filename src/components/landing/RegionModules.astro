---
import SectionBackground from '~/components/common/SectionBackground.astro';
import type { ImageMetadata } from 'astro';

export interface Props {
  sectionTitle: string;
  sectionSubtitle: string;
  regions: Array<{ id: string; name: string; content: string }>;
  ctaLabel: string;
  ctaUrl: string;
  backgroundImage?: ImageMetadata;
}

const { sectionTitle, sectionSubtitle, regions, ctaLabel, ctaUrl, backgroundImage } = Astro.props;
---

<section id="regionen" class:list={["relative py-16 sm:py-20", backgroundImage ? "" : "bg-stone-50 dark:bg-alpine-800"]}>
  {backgroundImage && (
    <SectionBackground src={backgroundImage} alt="Section background" />
  )}
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-slate-800 dark:text-white font-heading text-center mb-3">
      {sectionTitle}
    </h2>
    <p class="text-slate-500 dark:text-slate-400 text-center max-w-2xl mx-auto mb-12">
      {sectionSubtitle}
    </p>

    <div class="grid sm:grid-cols-2 gap-5">
      {regions.map((region) => (
        <div class="group glass-card-hover p-5 sm:p-6 intersect:animate-fade intersect-once">
          <h3 class="text-lg font-semibold text-slate-800 dark:text-white mb-2 flex items-center gap-2">
            <svg class="card-icon-bounce w-5 h-5 text-orange-500 dark:text-sky-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {region.name}
          </h3>
          <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed mb-3">
            {region.content}
          </p>
          <a
            href={ctaUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center min-h-[44px] text-sm font-medium text-orange-500 dark:text-sky-400 hover:text-orange-600 dark:hover:text-sky-300 transition-colors cursor-pointer focus:outline-none focus:underline"
          >
            {ctaLabel}
            <svg class="arrow-slide w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
